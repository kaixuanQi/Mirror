<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.excean.mirror.plugin.holder"

    >

    <permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="com.excean.mirror.plugin.App"
        >
        <meta-data
            android:name="mirror.service"
            android:value="${MIRROR_SERVICE}" />

        <meta-data
            android:name="mirror.package"
            android:value="${MIRROR_PACKAGE}" />

        <meta-data
            android:name="mirror.user"
            android:value="${MIRROR_USER}" />

        <activity android:name="com.excean.mirror.plugin.MainActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>