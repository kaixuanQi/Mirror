<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.excean.mirror"
   >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mirror.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Mirror.NoActionBar.FullScreen">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".apps.AppPackageActivity" />
        <activity android:name=".personal.CenterActivity" />
        <activity android:name=".personal.AboutActivity" />
        <activity android:name=".personal.FeedbackActivity" />
        <activity android:name=".personal.QuestionActivity" />
        <activity android:name=".MirrorActivity" />
        <activity android:name=".producer.MirrorProducerActivity" />
        <activity
            android:name=".StubActivity"
            android:exported="true"
            android:theme="@style/Theme.Mirror.NoActionBar.FullScreen">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.excean.mirror.action.mirror" />
            </intent-filter>
        </activity>

        <provider
            android:name=".plugin.InstallProvider"
            android:authorities="${applicationId}:file.provider"
            android:exported="false"
            android:grantUriPermissions="true" />
        <provider
            android:name=".plugin.ServerProvider"
            android:authorities="${applicationId}:mirror.service"
            android:exported="true" />

        <service android:name=".version.DownloadService" />
    </application>

</manifest>